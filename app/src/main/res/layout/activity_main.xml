<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/motionLayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/background"
        tools:context=".MainActivity"
        app:layoutDescription="@xml/activity_main_scene">

    <TextView
            android:id="@+id/ramadan_routine"
            android:layout_width="@dimen/big_width"
            android:layout_height="wrap_content"
            android:textSize="@dimen/big_title"
            android:text="@string/ramadan_routine"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
    />



        <LinearLayout
                android:id="@+id/part2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/background"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/part1"
        >

            <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottieAnimationView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginVertical="@dimen/big_size"
                    android:visibility="visible"
                    app:lottie_autoPlay="true" app:lottie_repeatCount="5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="parent"

                    app:lottie_rawRes="@raw/wakeup_for_suhoor_1"
                    android:layout_marginTop="36dp"/>
            <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottieAnimationView1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginVertical="@dimen/big_size"
                    android:visibility="visible"
                    app:lottie_autoPlay="true" app:lottie_repeatCount="5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="parent"
                    app:lottie_rawRes="@raw/suhoor_2"
                    android:layout_marginTop="36dp"/>
            <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottieAnimationView2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginVertical="@dimen/big_size"
                    android:visibility="visible"
                    app:lottie_autoPlay="true" app:lottie_repeatCount="5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="parent"
                    app:lottie_rawRes="@raw/fajir_prayer_3"
                    android:layout_marginTop="36dp"/>


        </LinearLayout>

    <LinearLayout
            android:id="@+id/part1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/background"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ramadan_routine"

    >

        <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieAnimationView4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginVertical="@dimen/big_size"
                android:visibility="visible"
                app:lottie_autoPlay="true"
                app:lottie_repeatCount="5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent"

                app:lottie_rawRes="@raw/helping_others_with_sadaka_7"
                android:layout_marginTop="36dp"/>
        <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieAnimationView5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginVertical="@dimen/big_size"
                android:visibility="visible"
                app:lottie_autoPlay="true" app:lottie_repeatCount="5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                app:lottie_rawRes="@raw/teach_children_to_make_sadaka_8"
                android:layout_marginTop="36dp"/>
        <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieAnimationView6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginVertical="@dimen/big_size"
                android:visibility="visible"
                app:lottie_autoPlay="true" app:lottie_repeatCount="5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                app:lottie_rawRes="@raw/iftar_10"
                android:layout_marginTop="36dp"/>


    </LinearLayout>




    <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/swipe_lottie"
            android:layout_height="100dp"
            android:layout_width="100dp"
            app:lottie_colorFilter="@color/white"
            android:layout_marginVertical="@dimen/medium_size"
            android:visibility="visible"
            app:lottie_autoPlay="true" app:lottie_repeatCount="5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:lottie_rawRes="@raw/swipeup"/>


</androidx.constraintlayout.motion.widget.MotionLayout>